<Window x:Class="GameMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--Background Setting-->
    <Grid Background="Beige">
        <!--Row Settings-->

        <Grid.RowDefinitions>
            <!--Defining Settings-->
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <!--Column Nested Settings-->
        <Grid x:Name="grid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <!--Defining Columns-->
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>

            <!--Stack Panel Team Detail Input Settings-->
            <StackPanel Grid.Column="0" Margin="10" KeyDown="StackPanel_KeyDown">
                <Label x:Name="lblHeading" Content="Kidd Esports" FontSize="20" FontWeight="Bold" FontStyle="Italic" FontFamily="ROG Fonts"/>
                <Label x:Name="lblTeamName" Content="Team Name" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtTeamName" FontSize="16" TextWrapping="Wrap"/>
                <Label x:Name="lblContactName" Content="Contact Name" FontSize="16" FontWeight="Bold"/>
                <TextBox x:Name="txtContactName" FontSize="16" TextWrapping="Wrap"/>
                <Label x:Name="lblContactPhone" FontSize="16" FontWeight="Bold">Contact Phone:</Label>
                <TextBox x:Name="txtContactPhone" FontSize="16" TextWrapping="Wrap"/>
                <Label x:Name="lblContactEmail" FontSize="16" FontWeight="Bold">Contact Email:</Label>
                <TextBox x:Name="txtContactEmail" FontSize="16" TextWrapping="Wrap"/>
                <Label x:Name="lblCompetitionPoints" FontSize="16" FontWeight="Bold">Competition Points:</Label>
                <TextBox x:Name="txtCompetitionPoints" FontSize="16" TextWrapping="Wrap"/>
            </StackPanel>
            
            <!--Data Grid Setting-->
            <DataGrid x:Name="dgvteamTable" Grid.Column="1" Margin="10" IsReadOnly="True" SelectionChanged="dgvteamTable_SelectionChanged"/>
        </Grid>


        <!--Button Settings-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSave" Content="SAVE" Margin="10" Click="btnSave_Click" Height="50" Width="120" />
            <Button x:Name="btnUpdate" Content="UPDATE" Margin="10" Click="btnUpdate_Click" Height="50" Width="120"/>
            <Button x:Name="btnDelete" Content="DELETE" Margin="10" Click="btnDelete_Click" Height="50" Width="120"/>
            <Button x:Name="btnExit" Content="EXIT" Margin="10" Click="btnExit_Click" Height="50" Width="120" />
        </StackPanel>

    </Grid>
</Window>
